{
    "app-id": "com.github.muriloventuroso.givemelyrics",
    "runtime": "org.freedesktop.Platform",
    "runtime-version" : "18.08",
    "base" : "io.elementary.BaseApp",
    "base-version" : "juno",
    "sdk": "org.freedesktop.Sdk",
    "command": "com.github.muriloventuroso.givemelyrics",

    "finish-args": [
        "--share=ipc",
        "--share=network",
        "--socket=x11",
        "--device=dri",
        "--socket=wayland",
        "--talk-name=org.freedesktop.DBus",
        "--talk-name=ca.desrt.dconf",
        "--talk-name=org.mpris.MediaPlayer2.*",
        "--env=DCONF_USER_CONFIG_DIR=.config/dconf",
        "--filesystem=xdg-run/dconf",
        "--filesystem=~/.config/dconf:ro"
    ],

    "modules": [
        {
            "name": "givemelyrics",
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/muriloventuroso/givemelyrics/archive/0.2.1.tar.gz",
                    "sha256": "857b9a890f615285deb8254689d13fb15ac4e99aad9ab1061c21e43ce22ec152"
                },
                {
                    "type": "patch",
                    "path": "apply-eos-theme-givemelyrics"
                }
            ],
            "post-install": [
                "glib-compile-schemas /app/share/glib-2.0/schemas/"
            ]
        }
    ]
}
